<% layout('layouts/boilerplate') %>
    <div class="flex flex-col m-10">
        <h1 class="text-3xl"><%= event.title %></h1>
        <h2 class="text-xl"><%= event.location %></h2>
        <img src="<%= event.image %>" alt="" class="w-96">
        <p><%= event.description%></p>
        <p>
            <form action="/events/<%=event._id%>?_method=DELETE" method="POST">
                <button class="border bg-black text-white p-2 rounded-md">Delete</button>
            </form>
        </p>
    </div>
    <footer class="m-5">
        <a href="/events/<%=event._id %>/edit" class="border bg-black text-white p-2 rounded-md">Edit</a>
        <a href="/events" class="border bg-black text-white p-2 rounded-md">All Events</a>
    </footer>
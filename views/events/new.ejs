<% layout('layouts/boilerplate') %>
    <div class="grid grid-cols-6 gap-4">
        <h1 class="mt-5 col-start-3 col-span-2 text-center text-3xl">List Your Event</h1>
        <div class="col-start-3 col-span-2">
            <form action="/events" method="POST">
                <div class="sm:col-span-3">
                    <label for="title" class="block text-sm font-medium leading-6 text-gray-900">Title</label>
                    <div class="mt-2">
                      <input type="text" name="event[title]" id="title" class="px-3 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6">
                    </div>
                </div>
                <div class="col-span-full mt-2">
                    <label for="description" class="block text-sm font-medium leading-6 text-gray-900">Description</label>
                    <div class="mt-2">
                      <textarea id="description" name="event[description]" rows="3" class="px-3 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6"></textarea>
                    </div>
                    <p class="mt-3 text-sm leading-6 text-gray-600">Write a few sentences about the event.</p>
                </div>
                <div class="sm:col-span-3 mt-2">
                    <label for="price" class="block text-sm font-medium leading-6 text-gray-900">Ticket Price</label>
                    <div class="mt-2">
                      <input type="text" name="event[price]" id="price" placeholder="0.00" class="px-3 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6">
                    </div>
                </div>
                <div class="sm:col-span-3 mt-2">
                    <label for="location" class="block text-sm font-medium leading-6 text-gray-900">Location</label>
                    <div class="mt-2">
                      <input type="text" name="event[location]" id="location" class="px-3 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6">
                    </div>
                </div>
                <div class="sm:col-span-3 mt-2">
                    <label for="venue" class="block text-sm font-medium leading-6 text-gray-900">Venue</label>
                    <div class="mt-2">
                      <input type="text" name="event[venue]" id="venue" class="px-3 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6">
                    </div>
                </div>
                <div class="flex justify-between">
                  <div class="mt-2">
                    <label for="date" class="block text-sm font-medium leading-6 text-gray-900">Select Date</label>
                    <div class="mt-2">
                      <input type="date" name="event[date]" id="date" class="px-3 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6">
                    </div>
                  </div>
                  <div class="mt-2">
                    <label for="time" class="block text-sm font-medium leading-6 text-gray-900">Start Time/ Duration</label>
                    <div class="mt-2">
                      <input type="text" name="event[time]" id="time" class="px-3 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6">
                    </div>
                </div>
                </div>
                <div class="sm:col-span-3 mt-2">
                    <label for="image" class="block text-sm font-medium leading-6 text-gray-900">Image URL</label>
                    <div class="mt-2">
                      <input type="text" name="event[image]" id="image" class="px-3 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6">
                    </div>
                </div>
                <button class="mt-4 mb-4 border bg-[#32c0f0] text-white p-2 rounded-md">Add Event</button>
            </form>
        </div>
    </div>
